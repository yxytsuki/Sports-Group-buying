.order-item {
	height: 570rpx;
	border-radius: 40rpx;
	background-color: #fff;
}
.order-title {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 40rpx;
	height: 100rpx;
	background-color: #b7d9a5;
	border-radius: 40rpx 40rpx 0 0;
}
.order-title-txt {
	margin-left: 16rpx;
	height: 70rpx;
	line-height: 70rpx;
	color: #333;
	font-size: 36rpx;
	font-weight: 600;
}
.order-title-status {
	line-height: 70rpx;
	color: #04d927;
}
.order-title-running {
	line-height: 70rpx;
	color: #ff5500;
}
.order-content {
	height: 100rpx;
	padding: 0 20rpx;
}
.order-content-msg {
	display: flex;
	justify-content: space-between;
	margin-top: 30rpx;
	height: 60rpx;
}
.order-msg-time {
	height: 60rpx;
	padding: 0 10rpx;
	line-height: 60rpx;
	font-size: 32rpx;
	border: 1rpx solid #333;
	border-radius: 10rpx;
}
.order-msg-detail {
	position: absolute;
	right: 48rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 32rpx;
	color: #4cd964;
	background-color: #000;
	border-radius: 16rpx;
}
.order-content-number {
	display: flex;
	justify-content: space-between;
	margin-top: 20rpx;
	margin-bottom: 40rpx;
	height: 30rpx;
}
.order-number-txt {
	font-size: 32rpx;
	line-height: 30rpx;
	color: #999;
}
.order-number {
	margin-right: 10rpx;
	font-size: 32rpx;
	line-height: 30rpx;
}
.order-status-btn {
	width: 140rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	margin-left: 500rpx;
	border: 1rpx solid #999;
	border-radius: 25rpx;
}
.order-status-pay {
	position: absolute;
	right: 240rpx;
}
