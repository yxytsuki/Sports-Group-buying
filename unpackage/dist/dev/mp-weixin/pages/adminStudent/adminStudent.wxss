.container {
	padding: 20rpx;
	background-color: #f5f5f5;
}
.student-list {
	background-color: #fff;
	flex-direction: column;
	gap: 20rpx;
}
.student-card {
	background-color: #fff;
	border-radius: 12rpx;
	padding: 20rpx;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, .1);
}
.card-content {
	display: flex;
	justify-content: space-between;
	align-items: center;
	position: relative;
}
.avatar {
	width: 100rpx;
	height: 100rpx;
	background-repeat: no-repeat;
	background-size: 100% 100%;
	border-radius: 50%;
	margin-right: 20rpx;
}
.info {
	flex: 1;
}
.operate {
	margin-right: 70rpx;
	display: flex;
	width: 140rpx;
	justify-content: space-between;
	font-size: 28rpx;
	color: #1dbbff;
}
.nickName {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 10rpx;
	display: block;
}
.course {
	font-size: 28rpx;
	color: #666;
	display: block;
}
.del-btn {
	position: absolute;
	right: 0;
	top: 50%;
	transform: translateY(-50%);
	padding: 10rpx;
}
.popup-content {
	background-color: #fff;
	border-radius: 12rpx;
	width: 600rpx;
	padding: 30rpx;
}
.popup-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 30rpx;
}
.popup-title {
	font-size: 32rpx;
	font-weight: bold;
}
.close-btn {
	padding: 10rpx;
}
.detail-info {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.detail-avatar {
	width: 160rpx;
	height: 160rpx;
	border-radius: 50%;
	margin-bottom: 30rpx;
	background-color: pink;
}
.detail-item {
	width: 100%;
	display: flex;
	padding: 20rpx 0;
	border-bottom: 1px solid #eee;
}
.label {
	width: 160rpx;
	color: #666;
	font-size: 28rpx;
}
.value {
	flex: 1;
	color: #333;
	font-size: 28rpx;
}
.add-btn {
	margin: 40rpx auto;
	height: 80rpx;
	color: #fff;
	text-align: center;
	line-height: 80rpx;
	background-color: #5aff35;
	width: calc(100% - 100rpx);
	border-radius: 45rpx;
}
