.pay-content-top {
	padding: 40rpx 40rpx;
	height: 440rpx;
	background-color: #b3ffcb;
}
.pay-content-detail {
	height: 320rpx;
	background-color: #fff;
	border-radius: 40rpx;
}
.pay-detail-head {
	display: flex;
	padding: 0 40rpx;
	justify-content: space-between;
	height: 80rpx;
	background-image: linear-gradient(to right, #c9ffcb, #d9ffd8, #fff);
	border-radius: 40rpx 40rpx 0 0;
}
.pay-head-title {
	font-size: 36rpx;
	line-height: 80rpx;
}
.pay-head-status {
	font-size: 28rpx;
	line-height: 80rpx;
	color: #4eff27;
}
.pay-detail-body {
	display: flex;
	justify-content: space-between;
}
.pay-detail-time {
	margin-top: 30rpx;
	margin-left: 30rpx;
	padding: 0 10rpx;
	width: 380rpx;
	height: 60rpx;
	line-height: 60rpx;
	border: 1px solid #000;
	border-radius: 16rpx;
}
.pay-detail-rest {
	margin-top: 30rpx;
	margin-right: 20rpx;
	height: 60rpx;
	line-height: 60rpx;
	color: #999;
}
.pay-details-msg {
	display: flex;
	margin-top: 20rpx;
	margin-left: 20rpx;
	height: 40rpx;
}
.pay-msg-time::before {
	content: '';
	display: inline-block;
	width: 32rpx;
	height: 32rpx;
	margin-left: 8rpx;
	vertical-align: middle;
	background-image: url(../../static/resource/images/icon/time.png);
	background-size: 100% 100%;
	background-repeat: no-repeat;
}
.pay-msg-time {
	line-height: 40rpx;
	font-size: 28rpx;
}
.pay-msg-txt {
	line-height: 40rpx;
	font-size: 28rpx;
}
.pay-content-bottom {
	margin-top: -40rpx;
	padding: 0 40rpx;
	height: 500rpx;
	background-color: #fff;
	border-radius: 60rpx 60rpx 0 0;
}
.pay-bottom-head {
	height: 100rpx;
	font-size: 36rpx;
	line-height: 100rpx;
}
.pay-bottom-tips {
	margin-top: 20rpx;
	font-size: 28rpx;
}
.pay-bottom-agree {
	margin-top: 60rpx;
	height: 40rpx;
	display: flex;
}
.pay-agree-radio {
	margin-left: 140rpx;
}
.pay-agree-txt {
	font-size: 28rpx;
	color: #999;
	line-height: 40rpx;
}
.pay-agree-link {
	font-size: 32rpx;
	color: #2e9515;
}
.pay-bottom-pay {
	margin-top: 80rpx;
	height: 100rpx;
	font-size: 38rpx;
	text-align: center;
	line-height: 100rpx;
	background-image: linear-gradient(to left, #1ac98f, #3ae757, #94e437);
	border-radius: 24rpx;
}
.pay-password {
	width: calc(100% - 30rpx);
	height: 80rpx;
	border: 1rpx solid #333;
	text-align: center;
	line-height: 80rpx;
	border-radius: 40rpx;
}
.pay-password-input {
	height: 100%;
	width: 100%;

	border-radius: 40rpx;
}
.pay-error-msg {
	position: absolute;
	top: 190rpx;
	left: 60rpx;
	color: #ff5500;
}
